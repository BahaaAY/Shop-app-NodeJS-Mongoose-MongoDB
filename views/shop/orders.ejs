<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/orders.css">
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1 style="display: inline;">Order - # <%= order._id %></h1>
                            <a href="/orders/<%= order._id %>" class="orders__item-link">Invoice</a>
                            <ul class="orders__products">
                                <% order.items.forEach(p => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>) x $ <%= p.product.price %></li>
                                <% }); %>
                            </ul>
                            <h1>
                                Total Price: $ <%= order.totalPrice %>
                            </h1>
                        </li>
                    <% }); %>

                </ul>
            <% } %>
        </main>
   
        <%- include('../includes/end.ejs') %>